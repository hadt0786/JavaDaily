package LinkedList;

public class Main {

	public static void main(String[] args) {

		Node a = new Node();
		a.data = 1;

		Node b = new Node();
		b.data = 2;

		Node c = new Node();
		c.data = 3;

		Node d = new Node();
		d.data = 4;

		a.next = b;
		b.next = c;
		c.next = d;

		System.out.println(listLength(a));//4
		System.out.println(listLength(b));//3


	}

	private static int  listLength(Node a) {

		int count =0; 
		Node currentNode= a;
		while(currentNode!=null) {
			count++;
			currentNode = currentNode.next;
		}


		return count;
	}

}
